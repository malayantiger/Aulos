<UserControl x:Class="Aulos.CatelUI.Views.AlbumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Views="clr-namespace:Aulos.CatelUI.Views"
             xmlns:catel="http://catel.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBox Text="{Binding ArtistName}" />
        <TextBox Text="{Binding Title}" />
        <TextBox Text="{Binding ReleaseYear}" />
        <TextBox Text="{Binding Genre}" />
        <TextBox IsReadOnly="True" Text="{Binding TotalTracksCount}" />
        <TextBox IsReadOnly="True" Text="{Binding Duration}" />
        <TextBox Text="{Binding SourcePath}" />   
    </StackPanel>
</UserControl>
