<mahapps:MetroWindow x:Class="Aulos.CatelUI.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
              xmlns:catel="http://catel.codeplex.com"
              xmlns:p="clr-namespace:Aulos.CatelUI.Properties"
              xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
              xmlns:Views="clr-namespace:Aulos.CatelUI.Views"
              Title="{Binding Source={x:Static p:Resources.ShellViewWindowTitle}}" Width="640" Height="480"
              ResizeMode="CanResize">

    <StackPanel>
        <DockPanel LastChildFill="False">
            <!--<ContentControl x:Name="CommandBar"
                            DockPanel.Dock="Top" />-->
            <ContentControl DockPanel.Dock="Top">
                <Views:CommandBarView />
            </ContentControl>
        </DockPanel>
        <Views:AlbumView Grid.Row="1" DataContext="{Binding SelectedAlbum}" />
        <Button Command="{Binding SaveAlbumCommand}" 
                Content="Save" />
    </StackPanel>
</mahapps:MetroWindow>
