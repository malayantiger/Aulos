<mahapps:MetroWindow x:Class="Aulos.CatelUI.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
              xmlns:catel="http://catel.codeplex.com"
              xmlns:p="clr-namespace:Aulos.CatelUI.Properties"
              xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
              xmlns:Views="clr-namespace:Aulos.CatelUI.Views"
              Title="{Binding Source={x:Static p:Resources.ShellViewWindowTitle}}" Width="400" Height="380"
              ResizeMode="CanResize"
              BorderBrush="{DynamicResource AccentColorBrush}"
              BorderThickness="1"
              WindowStartupLocation="CenterScreen">

    <StackPanel>
        <DockPanel LastChildFill="False">
            <ContentControl DockPanel.Dock="Top">
                <Views:CommandBarView />
            </ContentControl>
        </DockPanel>
        <Views:AlbumView DataContext="{Binding SelectedAlbum}" />
        <DockPanel Margin="10,5,10,10">
            <Button Command="{Binding SaveAlbumAsyncCommand}" 
                    Content="Save"
                    Width="100"
                    HorizontalAlignment="Right"/>
        </DockPanel>
    </StackPanel>
</mahapps:MetroWindow>
